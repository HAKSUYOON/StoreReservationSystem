<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zerobase.srs.store.mapper.StoreMapper">

    <sql id="selectListWhere">
        <if test="searchType != null and searchValue != null">
            <choose>
                <when test="searchType == 'storeName'">
                    and store_name like concat('%', #{searchValue}, '%')
                </when>
                <otherwise>
                    and
                    (
                    store_name like concat('%', #{searchValue}, '%')
<!--                    or-->
<!--                    user_name like concat('%', #{searchValue}, '%')-->
<!--                    or-->
<!--                    phone like concat('%', #{searchValue}, '%')-->
                    )
                </otherwise>
            </choose>
        </if>
    </sql>

    <select id="selectListCount"
            resultType="long">
        select count(*)
        from store
        where 1 = 1
        <include refid="selectListWhere"/>
    </select>
    <select id="selectList"
            resultType="com.zerobase.srs.store.dto.StoreDto">
        select *
        from store
        where 1 = 1
        <include refid="selectListWhere"/>
        order by store_name
        limit #{pageStart}, #{pageEnd}
    </select>
</mapper>